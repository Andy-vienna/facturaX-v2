<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>facturax-parent</artifactId>
    <groupId>org.andy</groupId>
    <version>2.0.3</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>lib-fXhtmlRunner</artifactId>
  <name>fXhtmlRunner</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>fXhtmlRunner</finalName>
              <transformers>
                <transformer>
                  <mainClass>org.andy.html2pdf.Runner</mainClass>
                </transformer>
              </transformers>
              <artifactSet>
                <excludes>
                  <exclude>org.andy:lib-facturaX</exclude>
                </excludes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>org.apache.pdfbox</pattern>
                  <shadedPattern>shadow.pdfbox2</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.fontbox</pattern>
                  <shadedPattern>shadow.fontbox2</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.commons.logging</pattern>
                  <shadedPattern>shadow.commons.logging</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.andy</groupId>
      <artifactId>lib-facturaX</artifactId>
      <version>2.0.3</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>21</maven.compiler.target>
    <maven.compiler.source>21</maven.compiler.source>
  </properties>
</project>
